<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin Vietravel</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="~/Assets/favicon.ico">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Areas/Admin/vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/vendors/themify-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Areas/Admin/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/vendors/selectFX/css/cs-skin-elastic.css">

    <link rel="stylesheet" href="~/Areas/Admin/vendors/datatables.net-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/vendors/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css">

    <link href="~/Areas/Admin/assets/css/style.css" rel="stylesheet" />


    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

</head>

<body>


    <!-- Left Panel -->

    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="./"><img src="~/Assets/img/logo.png" /></a>
                <a class="navbar-brand hidden" href="/Admin/Home/Index"><img src="~/Assets/favicon.ico" /></a>
            </div>

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="menu-item-has-children dropdown">
                        <a href="/Admin/Home/Index" class="dropdown-toggle"><i class="fa menu-icon fa-home"></i>Home</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-table"></i>Vé</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="menu-icon fa fa-th"></i><a href="/Admin/Ve/Index">Vé</a></li>
                            <li><i class="menu-icon fa fa-th"></i><a href="/Admin/LoaiVe/Index">Loại vé</a></li>
                        </ul>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="/Admin/DonDatVe/Index" class="dropdown-toggle"> <i class="menu-icon fa fa-table"></i>Đơn đặt vé</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="/Admin/KhachHang/Index" class="dropdown-toggle"> <i class="menu-icon fa fa-table"></i>Khách hàng</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-table"></i>Tin tức</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="menu-icon fa fa-th"></i><a href="/Admin/TinTuc/Index">Tin tức</a></li>
                            <li><i class="menu-icon fa fa-th"></i><a href="/Admin/LoaiTinTuc/Index">Loại tin tức</a></li>
                        </ul>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="/Admin/NhanVien/Index" class="dropdown-toggle"> <i class="menu-icon fa fa-table"></i>Nhân viên</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="/Admin/KhachSan/Index" class="dropdown-toggle"> <i class="menu-icon fa fa-table"></i>Khách sạn</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="/Admin/TaiKhoan/Index" class="dropdown-toggle"> <i class="menu-icon fa fa-table"></i>Tài khoản</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="/Admin/ThongKe/Index" class="dropdown-toggle"> <i class="menu-icon fa fa-table"></i>Thống kê</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="/Admin/CaiDat/Index" class="dropdown-toggle"> <i class="menu-icon fa fa-table"></i>Cài đặt</a>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
    </aside><!-- /#left-panel -->
    <!-- Left Panel -->
    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <header id="header" class="header">

            <div class="header-menu">

                <div class="col-sm-7">
                    <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                    <div class="header-left">
                        <button class="search-trigger"><i class="fa fa-search"></i></button>
                        <div class="form-inline">
                            <form class="search-form">
                                <input class="form-control mr-sm-2" type="text" placeholder="Search ..." aria-label="Search">
                                <button class="search-close" type="submit"><i class="fa fa-close"></i></button>
                            </form>
                        </div>

                        <div class="dropdown for-notification">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="notification" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-bell"></i>
                                <span class="count bg-danger">5</span>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="notification">
                                <p class="red">You have 3 Notification</p>
                                <a class="dropdown-item media bg-flat-color-1" href="#">
                                    <i class="fa fa-check"></i>
                                    <p>Server #1 overloaded.</p>
                                </a>
                                <a class="dropdown-item media bg-flat-color-4" href="#">
                                    <i class="fa fa-info"></i>
                                    <p>Server #2 overloaded.</p>
                                </a>
                                <a class="dropdown-item media bg-flat-color-5" href="#">
                                    <i class="fa fa-warning"></i>
                                    <p>Server #3 overloaded.</p>
                                </a>
                            </div>
                        </div>

                        <div class="dropdown for-message">
                            <button class="btn btn-secondary dropdown-toggle" type="button"
                                    id="message"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="ti-email"></i>
                                <span class="count bg-primary">9</span>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="message">
                                <p class="red">You have 4 Mails</p>
                                <a class="dropdown-item media bg-flat-color-1" href="#">
                                    <span class="photo media-left"><img alt="avatar" src="~/Areas/Admin/images/avatar/1.jpg"></span>
                                    <span class="message media-body">
                                        <span class="name float-left">Jonathan Smith</span>
                                        <span class="time float-right">Just now</span>
                                        <span>Hello, this is an example msg</span>
                                    </span>
                                </a>
                                <a class="dropdown-item media bg-flat-color-4" href="#">
                                    <span class="photo media-left"><img alt="avatar" src="~/Areas/Admin/images/avatar/2.jpg"></span>
                                    <span class="message media-body">
                                        <span class="name float-left">Jack Sanders</span>
                                        <span class="time float-right">5 minutes ago</span>
                                        <span>Lorem ipsum dolor sit amet, consectetur</span>
                                    </span>
                                </a>
                                <a class="dropdown-item media bg-flat-color-5" href="#">
                                    <span class="photo media-left"><img alt="avatar" src="~/Areas/Admin/images/avatar/3.jpg"></span>
                                    <span class="message media-body">
                                        <span class="name float-left">Cheryl Wheeler</span>
                                        <span class="time float-right">10 minutes ago</span>
                                        <span>Hello, this is an example msg</span>
                                    </span>
                                </a>
                                <a class="dropdown-item media bg-flat-color-3" href="#">
                                    <span class="photo media-left"><img alt="avatar" src="~/Areas/Admin/images/avatar/4.jpg"></span>
                                    <span class="message media-body">
                                        <span class="name float-left">Rachel Santos</span>
                                        <span class="time float-right">15 minutes ago</span>
                                        <span>Lorem ipsum dolor sit amet, consectetur</span>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-5">
                    <div class="user-area dropdown float-right">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img class="user-avatar rounded-circle" src="~/Areas/Admin/images/admin.jpg" alt="User Avatar">
                        </a>

                        <div class="user-menu dropdown-menu">
                            <a class="nav-link" href="#"><i class="fa fa-user"></i> My Profile</a>

                            <a class="nav-link" href="#"><i class="fa fa-user"></i> Notifications <span class="count">13</span></a>

                            <a class="nav-link" href="#"><i class="fa fa-cog"></i> Settings</a>

                            <a class="nav-link" href="#"><i class="fa fa-power-off"></i> Logout</a>
                        </div>
                    </div>

                    <div class="language-select dropdown" id="language-select">
                        <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="language" aria-haspopup="true" aria-expanded="true">
                            <i class="flag-icon flag-icon-us"></i>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="language">
                            <div class="dropdown-item">
                                <span class="flag-icon flag-icon-fr"></span>
                            </div>
                            <div class="dropdown-item">
                                <i class="flag-icon flag-icon-es"></i>
                            </div>
                            <div class="dropdown-item">
                                <i class="flag-icon flag-icon-us"></i>
                            </div>
                            <div class="dropdown-item">
                                <i class="flag-icon flag-icon-it"></i>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </header><!-- /header -->
        <!-- Header-->
        @RenderBody()
        <!-- .content -->
    </div><!-- /#right-panel -->
    <!-- Right Panel -->
    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/Areas/Admin/assets/js/main.js"></script>

    <script src="~/Areas/Admin/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/vendors/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Areas/Admin/vendors/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/vendors/jszip/dist/jszip.min.js"></script>
    <script src="~/Areas/Admin/vendors/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/Areas/Admin/vendors/pdfmake/build/vfs_fonts.js"></script>
    <script src="~/Areas/Admin/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Areas/Admin/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/Areas/Admin/vendors/datatables.net-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/Areas/Admin/assets/js/init-scripts/data-table/datatables-init.js"></script>

</body>

</html>
